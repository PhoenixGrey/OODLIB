sidebar
  #scroll-container-sidebar
    #sidebar-real-height
      .user-panel
        .user-info
          p(translate) Hello, {{model.user}}
      ul.menu(ng-repeat="section in model.rawData")
        li(ng-repeat="(nid, nObj) in section", ng-class="css.getState(model.states[nid].activation)")
          a(ng-if="model.states[nid].hasChildren", ng-click="model.toggle(nid)" href="")
            i(ng-class="nObj.icon")
            span {{nObj.name}}
            i.is-align-right(ng-class="css.getExpansion(model.states[nid].expansion)")
          a(ng-if="model.states[nid].hasChildren==false", ng-href="{{nObj.URL}}")
            i(ng-class="nObj.icon")
            span {{nObj.name}}
          ul.menu(ng-show="css.expanded(model.states[nid].expansion)")
            li(ng-repeat="(subNId, subNObj) in nObj.subnodes", ng-class="css.getState(model.states[subNId].activation)")
              a(ng-href="{{subNObj.URL}}" target="_self")
                i(ng-class="subNObj.icon")
                span {{subNObj.name}}
